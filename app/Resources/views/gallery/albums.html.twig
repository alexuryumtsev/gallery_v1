{% extends 'base.html.twig' %}

{% block title %}Test{% endblock %}

{% block body %}

<div class="container">
    <div class="grid">
    <h1 class="h2 text-center">Gallery</h1>
    <div class="row">

      {% for album in albums %}

        <div class="col-md-3 col-sm-4 col-xs-6 thumb">
            <a href="{{ asset("http://gallery.local/gallery/albums/" ~ album.aid) }}">

                {% for post in posts %}
                <img class="img-responsive" src="{{ asset("http://gallery.local/gallery/albums/" ~ post.filepath ~ post.filename) }}" alt="">
                {% endfor %}

            </a>
        </div>

      {% endfor %}
    </div>
    </div>
</div>

{% endblock %}
